resource "docker_container" "stackhead_internal-{{ stackhead_syscontainer_name }}" {
  image = "{{ stackhead_syscontainer_image }}"
  name  = "stackhead_internal-{{ stackhead_syscontainer_name }}"
  restart = "always"

  {% if stackhead_syscontainer_command is defined %}
  command = "{{ stackhead_syscontainer_command }}"
  {% endif %}

{%- for volume in stackhead_syscontainer_volumes|default([]) %}
